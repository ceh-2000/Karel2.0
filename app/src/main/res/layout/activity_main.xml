<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mainBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="vertical"
        >
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"

            android:orientation="horizontal"
            android:weightSum="100">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/swan"
                android:paddingRight="16dp"

                />
            <TextView
                android:id="@+id/instructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="16dp"
                android:textSize="25dp"
                android:textColor = "@color/white"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"

            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="100"

            >
            <Button
                android:id="@+id/on1"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_gravity="center"
                android:text="LED On"
                android:background="@color/pink"
                />

            <Button
                android:id="@+id/shortPause"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_gravity="center"
                android:text="Short Pause"
                android:background="@color/pink"

                />
            <Button
                android:id="@+id/forward"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_gravity="center"
                android:text="Move Forward"
                android:background="@color/blue"

                />
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="100"


            >
            <Button
                android:id="@+id/off1"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_gravity="center"
                android:text="LED Off"
                android:background="@color/blue"
                />
            <Button
                android:id="@+id/on2"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_gravity="center"
                android:text="LED 2 On"
                android:background="@color/blue"
                />
            <Button
                android:id="@+id/off2"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_gravity="center"
                android:text="LED 2 Off"
                android:background="@color/pink"
                />

            <Button
                android:id="@+id/longPause"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_gravity="center"
                android:text="Long Pause"
                android:background="@color/blue"
                />


            <Button
                android:id="@+id/left"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_gravity="center"
                android:text="Turn Left"
                android:background="@color/pink"
                />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button
                android:id="@+id/run"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="RUN"
                android:textColor="@color/white"
                android:background="@color/darkGreen"
                android:layout_margin="16dp"
                />
            <Button
                android:id="@+id/clear"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="CLEAR"
                android:textColor="@color/white"
                android:background="@color/darkGreen"
                android:layout_margin="16dp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="26sp"
            android:textColor = "@color/white"
            android:scrollbars="vertical"
            android:text="Code:"
            />
        <TextView
                android:id="@+id/code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="60dp"
                android:layout_gravity="center"
                android:textSize="26sp"
                android:textColor = "@color/white"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/howto"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:text="Instructions"
            android:layout_toLeftOf="@id/home"
            android:padding="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:background="@color/white"


            />
        <ImageButton
            android:id="@+id/home"
            android:layout_height="50dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:src="@drawable/home_button"
            android:background="@color/darkGreen"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"

            />
        <Button
            android:id="@+id/points"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Points: 0"
            android:layout_toRightOf="@id/home"
            android:layout_weight="3"
            android:padding="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:background="@color/white"
            />

    </LinearLayout>

</FrameLayout>

